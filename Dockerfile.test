# Dockerfile for Linux testing environment
FROM rust:latest

# Install dependencies for testing
RUN apt-get update && apt-get install -y \
    util-linux \
    udisks2 \
    eject \
    curl \
    git \
    build-essential \
    pkg-config \
    libssl-dev \
    libasound2-dev \
    nodejs \
    npm \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Install Rust tools for testing
RUN rustup component add rustfmt clippy

# Set working directory
WORKDIR /app

# Copy Cargo files first for better caching
COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY tests ./tests

# Copy web-ui for build (if needed)
COPY web-ui ./web-ui

# Default command runs tests in release mode to reduce memory usage
CMD ["cargo", "test", "--release", "--", "--nocapture"]

